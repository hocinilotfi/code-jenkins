pipeline{
    agent {
        docker {
            image "postman/newman"
            args "--entrypoint=''"
        }
        
    }

    stages{
        stage('verifier la version de newman'){
            steps{
                sh 'newman --version'
                sh 'npm install -g newman-reporter-htmlextra'
            }
        }
        stage('Test API'){
            steps{
                sh 'newman run collections/collection1.json -r cli,htmlextra --reporter-htmlextra-export newman-report.html'
            }
        }
    }
    post{
        always {
            archiveArtifacts artifacts: 'newman-report.html
        }
    }
}