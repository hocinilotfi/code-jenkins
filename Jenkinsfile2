pipeline{
    agent {
        docker {
            image "postman/newman"
            args "--entrypoint=''"
        }
        
    }

    stages{
        stage('verifier la version de newman'){
            steps{
                sh 'newman --version'
                sh 'npm i'
            }
        }
        stage('Test API'){
            steps{
                sh 'newman run collections/collection1.json -r htmlextra,csv'
                archiveArtifacts artifacts: '*.html', followSymlinks: false
        }
        }
    }
    post{
        always {
            archiveArtifacts artifacts: '*.html'
        }
    }
}